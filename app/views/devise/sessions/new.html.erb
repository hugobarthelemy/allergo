<div class="wrapper text-center">
 <div class="container" width: 300px >
   <div class = "row">
     <div class = "col-xs-8 col-xs-offset-2 col-sm-offset-3 col-sm-6 ">

        <!-- facebook login button -->
        <%- if devise_mapping.omniauthable? %>
          <%- resource_class.omniauth_providers.each do |provider| %>
            <%= link_to omniauth_authorize_path(resource_name, provider) do %>
              <%= image_tag ("fblogin.png"), class:"fblogin-button" %>
            <% end %>
          <% end -%>
        <% end -%>

        <div class="devise-login-text">
          <h2>or</h2>
        </div>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email, required: false, autofocus: true %>
            <%= f.input :password, required: false %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Log in" %>
          </div>
        <% end %>

        <%= render "devise/shared/links_login" %>
      </div>
    </div>
  </div>
</div>
