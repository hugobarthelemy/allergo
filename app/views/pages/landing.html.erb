<div class="banner" style="">
  <div class="container">
    <div class="banner-content">

      <div class="landing-title">
        <h1>Master your food allergies</h1>

        <div class="step-picto">
          <ol>
            <li>
              <%= image_tag "picto_allergies/milk_picto.png" %>
            </li>
            <li>
              <%= image_tag "picto_allergies/peanuts_picto.png" %>
            </li>
            <li>
              <%= image_tag "picto_allergies/wheat_picto.png" %>
            </li>
          </ol>
        </div>

      </div>

      <div class="landing-first">
        <div class="landing-claim">
          <p>Check a product's allergens and ingredients</p>
        </div>

        <%= link_to "Start scanning", pages_home_path, :class => "btn btn-primary btn-lg" %>
      </div>


      <div class="container">
        <div class="row">
          <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
            <hr>
          </div>
        </div>
      </div>

      <div class="landing-second">
        <div class="landing-claim">
          <p>Customized recommendations and alerts on products you follow</p>
        </div>

        <div class="landing-btn">
          <% if current_user %>
            <%= link_to "Edit Profile", user_path(current_user),:class => "btn btn-primary btn-lg" %>
          <% else %>
            <%= link_to "Create Profile", new_user_registration_path,:class => "btn btn-primary btn-lg" %>
          <% end %>
        </div>
      </div>

    </div>
  </div>
</div>

<%= content_for(:after_js) do%>
  <script>
    $(document).ready(function(){

      $( "#step-btn1" ).click(function() {
        console.log("Start step 1")
        $( "#step1" ).hide();
        $( "#step2" ).show();
        console.log("Finish step 1")
      });

      $( "#step-btn2" ).click(function() {
        console.log("Start step 2")
        $( "#step2" ).hide();
        $( "#step3" ).show();
        console.log("Finish step 2")
      });

    });
  </script>
<% end %>
