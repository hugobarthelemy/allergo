<% unless @favorites.empty? %>
  <h1 class="text-center fav-title">You are tracking the following products</h1>
<% else %>
  <h1 class="text-center fav-title">Oops, you are not tracking any products yet.</h1>
<% end %>

<div class="container">
  <div class="row">
    <% if @favorites %>
      <% @favorites.each do |result| %>
        <div class="col-xs-12 col-sm-4">
          <%= render 'shared/product_card', prod: result %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
