<div class="container">

  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <div class="text-center home-title">
        <% if user_signed_in? %>
          <h3>Hi <%= current_user.first_name %>!</h3>
        <% else %>
          <h3> Welcome!</h3>
        <% end %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <div class="text-center home-title">
        <h4>Press to scan your product</h4>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12">
      <div id="barcode">
        <video id="barcodevideo" autoplay></video>
        <canvas id="barcodecanvasg" ></canvas>
      </div>
      <canvas id="barcodecanvas" ></canvas>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12">
      <div class="text-center">
        <%= image_tag "barcode_scanner.ico", :id => "scan-icon" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12">
      <div class="text-center home-title">
        <h4>Or enter the product name below</h4>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-10 col-xs-offset-1 col-sm-10 col-sm-offset-1">
      <%= render 'shared/search_home' %>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <form action="<%= root_path %>" method="get" id="send" class="form-inline text-center">
        <input class="form-control" type="hidden" id="result" name="scanresult" placeholder="ean-13">
        <button type="submit" class="btn btn-info" style="display: none;">
            Go
        </button>
      </form>
      <h3 class="text-center"><%= @message %></h3>
    </div>
  </div>
</div>


