<div class="container">
  <% @allergies.each do |allergy| %>
    <div class="row">
      <div class="col-xs-4 col-md-3">
        Allergies: <br>  <%= allergy.name %>
      </div>
      <div class="col-xs-8 col-md-6">
        <!-- TODO : les ingredients correspondant -->
        <p>Les ingredients correspondant Ã  l'allergie</p>
        <% allergens = allergy.ingredients %>
        <% allergens_names = [] %>
        <% allergens.each { |allergen| allergens_names << allergen.any_name } %>
        <% allergens_names.uniq! %>
        <ul>
          <% allergens_names.each do |allergen_name| %>
           <li><%= allergen_name %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>
  <div class="row">
      <div class="col-xs-4 col-md-3" style="border: solid black;">
        All allergens in DB: <br>
        <% allergens_names = [] %>
        <% @allergens.each do |allergy_component| %>
          <% allergens_names << allergy_component.ingredient.any_name %>
        <% end %>
        <% allergens_names.uniq! %>
        <ul>
          <% allergens_names.each do |allergen_name| %>
           <li><%= allergen_name %></li>
          <% end %>
        </ul>
      </div>
  </div>
</div>
