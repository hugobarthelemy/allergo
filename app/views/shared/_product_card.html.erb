<div class="card card-hover">

  <div class="card-container-left">
    <div class="card-category">
      <span>Allergens: </span>
      <% all_allergen = [] %>
      <% prod.allergen_ingredients.each do |allergen| %>
        <% all_allergen << Ingredient.find(allergen.ingredient_id) %>
      <% end %>

      <% all_allergies_ingredients_id = [] %>
      <% all_allergen.each do |element| %>
        <% all_allergies_ingredients_id << Ingredient.find(element.id).en_name %>
      <% end %>

      <% all_allergies_ingredients_id.each do |allergy| %>
        <% case allergy %>
        <% when "milk" %>
          <%= image_tag ("picto_allergies/milk_picto.png"), class: "allergy-icon" %>
        <% when "crustacean" %>
          <%= image_tag ("picto_allergies/crustacean_shellfish_picto.png"), class: "allergy-icon" %>
        <% when "eggs" %>
          <%= image_tag ("picto_allergies/eggs-picto.png"), class: "allergy-icon" %>
        <% when "fish" %>
          <%= image_tag ("picto_allergies/fish_picto.png"), class: "allergy-icon" %>
        <% when "peanuts" %>
          <%= image_tag ("picto_allergies/peanuts_picto.png"), class: "allergy-icon" %>
        <% when "soybeans" %>
          <%= image_tag ("picto_allergies/soybeans_picto.png"), class: "allergy-icon" %>
        <% when "nuts" %>
          <%= image_tag ("picto_allergies/tree_nuts_picto.png"), class: "allergy-icon" %>
        <% when "gluten" %>
          <%= image_tag ("picto_allergies/wheat_picto.png"), class: "allergy-icon" %>
        <% else %>
          <span>'Unknow icon'</span>
        <% end %>
      <% end %>


    </div>

    <div class="card-description">
      <div class="card-product-name">
        <h2><%= prod.name %></h2>
      </div>
      <div class="card-product-manufacturer">
        <p><%= prod.manufacturer %></p>
      </div>
    </div>
  </div>


  <div class="card-container-right">
    <div class="card-product_pic">
      <%= image_tag prod.img_url %>
    </div>
  </div>


  <%= link_to product_path(prod.id) do %>
    <div class="card-link"></div>
  <% end %>

</div>





