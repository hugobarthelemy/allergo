<div class="text-center">

  <% searched_words = "" %>

  <div class="row">
    <div class="col-xs-8 col-xs-offset-2 col-sm-10 col-sm-offset-1">

      <div class="index-searchbar">
        <!-- <form action="/products/search" method="get" id="search-form"> -->
        <form id="search-form" action="/products" class="form-inline">
          <div class="form-group">
            <input type="text" name="searched_words" placeholder="Bacon - Costco" id="searched-words" class="form-control">
            <input type="submit" value="Go" id="submit-button" class="btn btn-info search-button">
          </div>
        </form>
      </div>

    </div>
  </div>





  <div class="container">
    <div class="row">

    <% unless @products.empty? %>
      <% @products.each do |result| %>
        <% if result.class == Product %>
          <div class="col-xs-12 col-sm-4">
            <%= render 'shared/product_card', prod: result %>
          </div>
        <% end %>
      <% end %>
    <% else %>
      <p>Your product could not be found.</p>
      <p>Try another one.</p>
    <% end %>
    </div>
  </div>
</div>






