<div class="text-center">

  <% searched_words = "" %>

  <div class="index-searchbar">
    <!-- <form action="/products/search" method="get" id="search-form"> -->
    <form id="search-form" action="/products" class="form-inline">
      <div class="form-group">
        <input type="text" name="searched_words" placeholder="Bacon - Costco" id="searched-words" class="form-control">
        <input type="submit" value="Go" id="submit-button" class="btn btn-info">
      </div>
    </form>
  </div>

  <% @searched_words = params[:searched_words] %>
  <% @products = Product.search_by_manufacturer_and_name(@searched_words) %>


  <div class="container">
    <div class="row">

    <% unless @products.empty? %>
      <% @products.each do |result| %>
        <div class="col-xs-12 col-sm-4">
          <%= render 'shared/product_card', prod: result %>
        </div>
      <% end %>
    <% else %>
      <p>Your product could not be found.</p>
      <p>Try another one.</p>
    <% end %>
    </div>
  </div>
</div>






