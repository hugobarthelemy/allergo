<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">

      <h3 class="text-center review-title">Leave a review for <%= @product.name %></h3>
       <%= simple_form_for @review, url: product_review_path(@product, @review) do |m| %>

        <label for="cbox1" class="input-label-title">How did you feel after eating this product?</label><br>
         <label class="review-input"><input type="checkbox" id="cbox1" value="0" name="review[score]"> <i class="fa fa-frown-o" aria-hidden="true"></i> - Intense allergic reactions </label><br>
         <label class="review-input"><input type="checkbox" id="cbox1" value="1" name="review[score]"> <i class="fa fa-meh-o" aria-hidden="true"></i> - Minor allergic reactions </label><br>
         <label class="review-input"><input type="checkbox" id="cbox1" value="2" name="review[score]"> <i class="fa fa-smile-o" aria-hidden="true"></i> - Perfectly fine</label><br>

         <%= m.input :content, label: 'Your comments', label_html: { class: 'input-label-title' }%>
         <div class="text-center">
          <%= m.button :submit, class: 'btn btn-info' %>
         </div>
       <% end %>

    </div>
  </div>
</div>
