        <% @pictos_for_traces_no_match_with_profil.each do |picto_for_traces_no_match_with_profil| %>
          <div class="pictos_for_traces_no_match_with_profil picto-allergies"><%= image_tag(picto_for_traces_match_with_profil) %></div>
