<div class="mobile-show-title-h1 text-center">
  <h1><%=@product.name%></h1>
  <h2><%=@product.manufacturer%></h2>
</div>
<div class="text-center avatar-product">
  <%= image_tag @product.img_url %>
</div>

<!-- Match? -->
<% if @product_eatable == true %>
  <p>You can eat me, you lucky!</p>
<%else%>
  <p>Do NOT eat me!</p>
<%end%>

<!-- Display significative allergens in product matching user's-->
