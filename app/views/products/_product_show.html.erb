    <%= image_tag "picto_allergies/fish_picto_no.png" %>
    <%= image_tag "picto_allergies/milk_picto_no.png" %>
    <%= image_tag "picto_allergies/peanuts_picto_no.png" %>
    <%= image_tag "picto_allergies/soybeans_picto_no.png" %>
    <%= image_tag "picto_allergies/tree_nuts_picto_no.png" %>
